<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @newbook %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"50x50" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td><%= @book.category%></td>
          <% if @book.favorited_by?(current_user)%>
            <td>
              <div>
                <%= link_to book_favorites_path(@book), class: "text-danger", method: :delete do%>
                  ♥<%= @book.favorites.count%>
                <%end%>
              </div>
            </td>
          <%else%>
            <td>
              <div>
                <%= link_to book_favorites_path(@book), class: "text-primary", method: :post do%>
                  ♥<%= @book.favorites.count%>
                <%end%>
              </div>
            </td>
          <%end%>
            <td>コメント数:<%= @book.book_comments.count %></td>
            <td>
              <div id="star-rate<%= @book.id%>"></div>
              <script>
                $('#star-rate<%= @book.id%>').raty({
                  size      : 36,
                  starOff   : '<%= asset_path('star-off.png') %>',
                  starOn    : '<%= asset_path('star-on.png') %>',
                  half      : false,
                  readOnly: true,
                  score: <%= @book.rate %>,
                });
              </script>
            </td>
            <%if @book.user == current_user%>
              <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
              <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
            <%end%>
        </tr>
      </table>

      <div class = "comments">
        <%= render 'books/book_comments', book: @book%>
      </div>

      <div>
          <%= form_with model: [@book, @book_comment], local: false do |f|%>
           <%= f.text_area :comment,rows:"5", class: "w-100"%>
           <%= f.submit "送信"%>
          <%end%>
      </div>

    </div>
  </div>
</div>